#!/bin/bash

# cwtr - Remove a git worktree
# Usage: cwtr <worktree-path>

if [ -z "$1" ]; then
    echo "Usage: cwtr <worktree-path>"
    echo "Example: cwtr /Users/bryan/dev/python/cc-wt/encrytion-migration"
    exit 1
fi

WORKTREE_PATH="$1"

echo "Removing worktree: $WORKTREE_PATH"
git worktree remove "$WORKTREE_PATH"

if [ $? -eq 0 ]; then
    echo "✓ Worktree removed successfully"
else
    echo "✗ Failed to remove worktree"
    echo "You may need to use 'git worktree remove --force' if there are uncommitted changes"
fi